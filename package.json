{
  "name": "lazystarforge",
  "version": "0.0.1",
  "type": "module",
  "bin": {
    "lazystarforge": "bin/lazystarforge"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --platform node --out-dir dist --clean --sourcemap --dts",
    "dev": "npm run build -- --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.27",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "neo-blessed": "^0.2.0"
  }
}
